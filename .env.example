# TFT Monitoring Prediction System - Environment Configuration
# Copy this file to .env and customize as needed

# ============================================================================
# Daemon Configuration
# ============================================================================

# Inference daemon host and port
DAEMON_HOST=localhost
DAEMON_PORT=8000

# Fleet size (number of servers to monitor)
FLEET_SIZE=20

# ============================================================================
# Model Configuration
# ============================================================================

# Model directory (auto-detects latest if not specified)
# MODEL_PATH=models/tft_model_20251012_172540

# Prediction horizon (timesteps ahead, default: 96 = 8 hours)
PREDICTION_HORIZON=96

# Context length (timesteps lookback, default: 288 = 24 hours)
CONTEXT_LENGTH=288

# ============================================================================
# Dashboard Configuration
# ============================================================================

# Auto-refresh interval in seconds (default: 30)
REFRESH_INTERVAL=30

# Enable demo mode on startup (default: false)
DEMO_MODE=false

# ============================================================================
# Training Configuration
# ============================================================================

# Training data directory
TRAINING_DIR=./training/

# Number of training epochs (default: 20)
EPOCHS=20

# Batch size (auto-configured for GPU if not set)
# BATCH_SIZE=32

# Learning rate
LEARNING_RATE=0.01

# ============================================================================
# GPU Configuration
# ============================================================================

# Force CPU mode (set to 1 to disable GPU)
# FORCE_CPU=0

# CUDA device (default: 0)
# CUDA_DEVICE=0

# ============================================================================
# Data Generation
# ============================================================================

# Number of servers to generate data for
SERVERS_COUNT=20

# Hours of metrics to generate
HOURS=720

# Anomaly ratio (0.0 to 1.0, default: 0.12)
ANOMALY_RATIO=0.12

# ============================================================================
# Logging
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable TensorBoard logging (default: true)
TENSORBOARD_ENABLED=true

# Log retention days (default: 45)
LOG_RETENTION_DAYS=45
